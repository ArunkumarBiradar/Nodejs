<h3>Editing Form for Student : <%= user.name %> </h3>
<p class="text-danger fw-bold text-center">( * ) fields are mandatory</p>
<form method="POST" class="addStu" autocomplete="off">
    <div class="mb-3">
      <label for="Name" class="form-label">Name <span class="text-danger fw-bold">*</span> : </label>
      <input type="text" name="name" required class="form-control" value="<%= user.name  %> " id="Name" onkeyup="manageBtn(this)">
    </div>
    <div class="mb-3">
        <label for="RollNo" class="form-label">Roll No <span class="text-danger fw-bold">*</span> : </label>
        <input type="number" name="roll" value="<%= user.roll  %> " required class="form-control" id="RollNo" onkeyup="manageBtn(this)">
      </div>     
     
      <div class="mb-3">
        <label for="Dateofbirth" class="form-label">Date of Birth <span class="text-danger fw-bold">*</span> : </label>
        <input type="date" name="dob" value="<%= user.dob  %> " required class="form-control" id="Dateofbirth" onkeyup="manageBtn(this)">
      </div>
      <div class="mb-3">
        <label for="Score" class="form-label">Score <span class="text-danger fw-bold">*</span> : </label>
        <input type="number" name="score" value="<%= user.score  %> " required class="form-control" id="Score" onkeyup="manageBtn(this)">
      </div>
      
    <button type="submit" id="btnSubmit" class="btn btn-success"disabled >Update</button>
</form>
<script>
  function manageBtn(txt) {
  var btn = document.getElementById('btnSubmit');
  if (Name.value != '' && RollNo.value != 0 && Score.value != 0 && Dateofbirth.value != '' ) {
  btn.disabled = false;
  }
  else {
  btn.disabled = true;
  }
  }
  </script>